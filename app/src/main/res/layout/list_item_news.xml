<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custome_shape">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/news_image_placeholder"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorPrimary"/>

    <TextView
        android:text="Likes(75)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/likes_txt"
        android:textColor="@color/colorAccent"
        tools:layout_editor_absoluteX="223dp"
        tools:layout_editor_absoluteY="99dp"
        android:layout_alignBaseline="@+id/date_txt"
        android:layout_alignBottom="@+id/date_txt"
        android:layout_toRightOf="@+id/date_txt"
        android:layout_toEndOf="@+id/date_txt"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        />

    <TextView
        android:text="8 views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/views_txt"
        app:layout_constraintLeft_toRightOf="@+id/likes_txt"
        android:textColor="@color/colorAccent"
        tools:layout_editor_absoluteY="99dp"
        android:layout_alignBaseline="@+id/likes_txt"
        android:layout_alignBottom="@+id/likes_txt"
        android:layout_toRightOf="@+id/likes_txt"
        android:layout_toEndOf="@+id/likes_txt"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <TextView
        android:text="14 oct,2014"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_txt"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="99dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_alignBottom="@+id/profile_image"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_toEndOf="@+id/profile_image" />

    <TextView
        android:text="title"
        android:layout_height="wrap_content"
        android:id="@+id/title_txt"
        android:textStyle="bold"
        android:textColor="@android:color/background_dark"
        app:layout_constraintLeft_toRightOf="@+id/profile_image"
        app:layout_constraintRight_toLeftOf="@+id/play_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        android:textSize="12sp"
        android:layout_alignTop="@+id/profile_image"
        android:layout_alignLeft="@+id/date_txt"
        android:layout_alignStart="@+id/date_txt"
        android:layout_width="200dp" />

    <ImageView
        app:srcCompat="@drawable/video_label"
        android:id="@+id/play_img"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/title_txt"
        android:layout_alignBottom="@+id/views_txt"
        android:layout_toRightOf="@+id/views_txt"
        android:layout_toEndOf="@+id/views_txt" />


</RelativeLayout>