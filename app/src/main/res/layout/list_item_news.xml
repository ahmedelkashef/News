<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custome_shape">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="14 oct,2014"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_txt"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="100dp"
            android:textSize="12sp"
         />

        <TextView
            android:text="8 views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/views_txt"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="250dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/news_image_placeholder"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorAccent"
         />

        <TextView
            android:text="title"
            android:layout_height="wrap_content"
            android:id="@+id/title_txt"
            android:textStyle="bold"
            android:textColor="@android:color/background_dark"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"

            android:layout_alignLeft="@+id/date_txt"
            android:layout_alignStart="@+id/date_txt"
            android:paddingRight="50dp"/>

        <TextView
            android:text="Likes(75)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/likes_txt"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="185dp"
            />

    </RelativeLayout>


    <ImageView
        app:srcCompat="@drawable/video_label"
        android:id="@+id/play_img"
        android:layout_width="54dp"
        android:layout_height="51dp"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp" />
</FrameLayout>