<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_details"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginBottom="16dp"
    tools:context="com.example.ahmedelkashef.linktask.Fragments.DetailsFragment"
    android:weightSum="1"
    android:background="@drawable/custome_shape">

    <!-- TODO: Update blank fragment layout -->
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/custome_shape">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:layout_gravity="center"

        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:id="@+id/detail_title_txt" />
</LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textStyle="bold"
                android:id="@+id/detail_date_txt"/>

                <View
              android:layout_width="2dp"
                android:layout_height="50dp"
              android:background="@android:color/white"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/like_unclicked"
                android:layout_gravity="center"
                android:id="@+id/like_icon"
                android:tag="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/detail_likes_txt" />

            <View
                android:layout_width="2dp"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:layout_gravity="center"

                android:layout_marginRight="8dp"/>


            <ImageView
                android:layout_width="30dp"
                android:layout_height="19dp"
                android:src="@drawable/views_icon"
                android:layout_gravity="center"
                android:id="@+id/imageView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"

                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:id="@+id/detail_view_txt"/>

        </LinearLayout>

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description_txt"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        />
    </LinearLayout>
</ScrollView>
</LinearLayout>
